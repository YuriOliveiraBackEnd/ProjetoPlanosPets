@model IEnumerable<bibliotecaModel.ModelCliente>


@{
    ViewBag.Title = "Lista de Clientes";
}

<h2>Listar usuario</h2>

<p>
    @Html.ActionLink("Adicionar novo Cliente", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id_cli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nome_cli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPF_cli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tel_cli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email_cli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nasc_cli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.logradouro_cli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cep_cli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.num_cli)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.senha_cli)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_cli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome_cli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF_cli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tel_cli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email_cli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nasc_cli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.logradouro_cli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.cep_cli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.num_cli)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.senha_cli)
            </td>

            <td>
                @Html.ActionLink("Editar", "Atualizar", new { Id = item.id_cli }) |
                @Html.ActionLink("Detalhes", "Detalhes", new { Id = item.id_cli }) |
                @Html.ActionLink("Excluir", "Excluir", new { id = item.id_cli }, new { onclick = "return confirm('Deseja realmente excluir?');" })
            </td>
        </tr>
    }

</table>
