@{
    ViewBag.Title = "Buscar";
}

<h2>Buscar</h2>



<div class="">

    <div class="row center">

        <div class="col-lg-9">

            <div class="row">

                @foreach (var item in Model)

                {

                    <div class="col-lg-3 col-md-6 mb-4" style="margin:2% 4%">

                        <div class="card h-100">

                            <a href="/Produto/Detalhes/@item.id_prod">

                                @if (@item.ft_prod != null)

                                {<img class="card-img-right flex-auto d-none d-md-block" data-src=" " alt="Thumbnail [300x300]" style="width: 300px; height: 300px;" src="@item.ft_prod" data-holder-rendered="true">}

                                else

                                {<img class="card-img-right flex-auto d-none d-md-block" data-src=" " alt="Thumbnail [300x300]" style="width: 300px; height: 300px;" src="~/Images/image-not-found.jpg" data-holder-rendered="true">}

                            </a>

                            <div class="card-body">

                                <h4 class="card-title">

                                    <a href="@item.ft_prod">@item.nome_prod</a>

                                </h4>

                                <h5>@item.valor_unitario</h5>
                                <h5>@item.desc_prod</h5>
                                <h5>@item.id_categoria</h5>
                                <h5>@item.quant</h5>

                            </div>

                            <div class="card-footer space-between-flex" style="width:90%">

                            </div>

                        </div>
                    </div>
                }

            </div>

        </div>

    </div>

</div>
