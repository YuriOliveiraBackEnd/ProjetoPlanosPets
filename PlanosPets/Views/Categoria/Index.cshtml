@model IEnumerable<bibliotecaModel.ModelCategorias>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Cadastrar")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id_categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nome_categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.desc_categoria)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id_categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome_categoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.desc_categoria)
            </td>
            <td>
                @Html.ActionLink("Atualizar", "Atualizar", new { id = item.id_categoria}) 
                @Html.ActionLink("Detalhes", "Detalhes", new { id = item.id_categoria }) 
                @Html.ActionLink("Excluir", "Excluir", new { id = item.id_categoria })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
